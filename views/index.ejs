<!DOCTYPE html>
<html>
  <%- include("partials/head"); %>
  <body>
    <%- include("partials/navbar"); %>
    <div class="container">
      <div class="mt-3">
  <table class="table table-bordered table-hover">
    <thead>
      <tr style="text-align: center">
        <th scope="col">No</th>
        <th scope="col">Nama User</th>
        <th scope="col">Tempat Lahir</th>
        <th scope="col">Tanggal Lahir</th>
        <th scope="col">Email</th>
        <th scope="col">No Telepon</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach((data, index)=> { %>
      <tr style="text-align: center;">
        <th scope="row"><%= index + 1 %></th>
        <td class="w-10"><%= data.name %></td>
        <td><%= data.placeofbirth %></td>
        <td><%= data.dateofbirth %></td>
        <td><%= data.email %></td>
        <td class="w-25"><%= data.phone_number %></td>
        <td>
          <div class="d-flex justify-content-evenly">
            <a
              class="btn btn-success btn-sm"
              href="/detail/<%= data.id %>"
              role="button"
            >
              <i class="bi-eye-fill"></i> Lihat Detail
            </a>

            <a
              class="btn btn-primary btn-sm"
              href="/edit/<%= data.id %>"
              role="button"
            >
              <i class="bi-pencil-fill"></i> Edit
            </a>
            <form
              method="post"
              action="/user/<%= data.id %>?_method=DELETE"
            >
              <button class="btn btn-danger btn-sm" type="submit" onclick="return confirm('apakah anda yakin hapus data ?');">
                <i class="bi-trash-fill"></i> Hapus
              </button>
            </form>
 
            </div>
          </div>
        </td>
      </tr>
      <% }) %>
    </tbody>
  </table>
  <div class="d-flex justify-content-between align-items-center">
  <h3 class="m-0"></h3>
  <a class="btn btn-primary" href="/user" role="button">
    <i class="bi-plus-lg"></i> Buat Baru
  </a>
</div>
</div>
    </div>
  </body>
</html>
